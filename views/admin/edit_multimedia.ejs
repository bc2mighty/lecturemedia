                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                Update Multimedia Details
                            </div>
                  	        <% if(locals.message){ %>
                  	            <p style="color:green;font-size: 15px;text-align: center;"><%=message.success%></p>
                  	        <% } %>
                  	        <% if(locals.message){ %>
                  	            <p style="color:red;font-size: 15px;text-align: center;"><%=message.failure%></p>
                  	        <% } %>
                  	        <% if(err_message != ""){ %>
