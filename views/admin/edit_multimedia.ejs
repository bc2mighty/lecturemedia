                  	        <% } %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12 col-xlg-12 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-horizontal form-material" action="/admin/multimedia/edit/<%= multimedia._id %>" method="post">

                                    <div class="form-group">
                                        <label class="col-md-12">Title <span style="color:red;font-size: 14px"><%= errors.title %></span></label>
                                        <div class="col-md-12">
                                            <input value="<%= request.title != null ? request.title : multimedia.title %>" name="title" type="text" placeholder="Enter Multimedia Title" class="form-control form-control-line">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-12">Description <span style="color:red;font-size: 14px"><%= errors.description %></span></label>
                                        <div class="col-md-12">
                                            <textarea class="form-control form-control-line" name="description" rows="8" cols="80" placeholder="Enter Multimedia Description"><%= request.description != null ? request.description : multimedia.description %></textarea>
                                            <!-- <input value="<%= request.description != null ? request.description : '' %>" name="description" type="text" placeholder="Enter Multimedia Description" class="form-control form-control-line"> -->
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">File Type <span style="color:red;font-size: 14px"><%= errors.file_type %></span></label>
                                        <div class="col-sm-12">
                                            <select name="file_type" class="form-control form-control-line">
                                                <option value="">Select File Type</option>
                                                <option <% if(request.file_type != null && request.file_type == 'audio'){ %><%= 'selected' %><% }else if(multimedia.file_type == 'audio'){ %><%= 'selected' %><% } %> value="audio">Audio</option>
                                                <option <% if(request.file_type != null && request.file_type == 'video'){ %><%= 'selected' %><% }else if(multimedia.file_type == 'video'){ %><%= 'selected' %><% } %> value="video">Video</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-12">Multimedia File <span style="color:red;font-size: 14px"><%= errors.multimedia_file %></span></label>
                                        <div class="col-md-12">
                                            <input name="multimedia_file" type="file" placeholder="Select Multimedia File" class="form-control form-control-line">
                                            <!-- <input value="<%= request.description != null ? request.description : '' %>" name="description" type="text" placeholder="Enter Multimedia Description" class="form-control form-control-line"> -->
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Course <span style="color:red;font-size: 14px"><%= errors.course %></span></label>
                                        <div class="col-sm-12">
                                            <select name="course" class="form-control form-control-line">
                                                <option value="">Select Course</option>
                                                <% courses.forEach(course => { %>
                                                    <option <% if(request.course != null && request.course == multimedia.course){ %><%= 'selected' %><% }else if(multimedia.course.toString().trim() == course._id){ %><%= 'selected' %><% } %> value="<%= course._id %>"><%= course.course_title %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Lecturers Having Access to the multimedia <span style="color:red;font-size: 14px"><%= errors.lecturers %></span></label>
                                        <div class="col-sm-12">
                                            <select name="lecturers[]" class="form-control form-control-line" multiple="multiple" id="lecturers">
                                                <option value="">Select Lecturers</option>
                                                <% lecturers.forEach(lecturer => { %>
                                                    <option value="<%= lecturer._id %>"><%= lecturer.full_name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Department <span style="color:red;font-size: 14px"><%= errors.department %></span></label>
                                        <div class="col-sm-12">
                                            <select name="department" class="form-control form-control-line">
                                                <option value="">Select Department</option>
                                                <option <% if(request.department != null && request.department == 'Computer Science'){ %><%= 'selected' %><% }else if(multimedia.department == 'Computer Science'){ %><%= 'selected' %><% } %> value="Computer Science">Computer Science</option>
                                                <option <% if(request.department != null && request.department == 'Information And Communication Technology'){ %><%= 'selected' %><% }else if(multimedia.department == 'Information And Communication Technology'){ %><%= 'selected' %><% } %> value="Information And Communication Technology">Information And Communication Technology</option>
                                                <option <% if(request.department != null && request.department == 'Cyber Security'){ %><%= 'selected' %><% }else if(multimedia.department == 'Cyber Security'){ %><%= 'selected' %><% } %> value="Cyber Security">Cyber Security</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Student Level that could access the multimedia <span style="color:red;font-size: 14px"><%= errors.level %></span></label>
                                        <div class="col-sm-12">
                                            <select name="level" class="form-control form-control-line">
                                                <option value="">Select Level</option>
                                                <option <% if(request.level != null && request.level == '100L'){ %><%= 'selected' %><% }else if(multimedia.level == '100L'){ %><%= 'selected' %><% } %> value="100L">100L</option>
                                                <option <% if(request.level != null && request.level == '200L'){ %><%= 'selected' %><% }else if(multimedia.level == '200L'){ %><%= 'selected' %><% } %> value="200L">200L</option>
                                                <option <% if(request.level != null && request.level == '300L'){ %><%= 'selected' %><% }else if(multimedia.level == '300L'){ %><%= 'selected' %><% } %> value="300L">300L</option>
                                                <option <% if(request.level != null && request.level == '400L'){ %><%= 'selected' %><% }else if(multimedia.level == '400L'){ %><%= 'selected' %><% } %> value="400L">400L</option>
                                                <option <% if(request.level != null && request.level == '500L'){ %><%= 'selected' %><% }else if(multimedia.level == '500L'){ %><%= 'selected' %><% } %> value="500L">500L</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Session <span style="color:red;font-size: 14px"><%= errors.session %></span></label>
                                        <div class="col-sm-12">
                                            <select name="session" class="form-control form-control-line">
                                                <option value="">Select Session</option>
                                                <option <% if(request.session != null && request.session == '2018/2019'){ %><%= 'selected' %><% }else if(multimedia.session == '2018/2019'){ %><%= 'selected' %><% } %> value="2018/2019">2018/2019</option>
                                                <option <% if(request.session != null && request.session == '2017/2018'){ %><%= 'selected' %><% }else if(multimedia.session == '2017/2018'){ %><%= 'selected' %><% } %> value="2017/2018">2017/2018</option>
                                                <option <% if(request.session != null && request.session == '2016/2017'){ %><%= 'selected' %><% }else if(multimedia.session == '2016/2017'){ %><%= 'selected' %><% } %> value="2016/2017">2016/2017</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12">Choose Semester <span style="color:red;font-size: 14px"><%= errors.semester %></span></label>
                                        <div class="col-sm-12">
                                            <select name="semester" class="form-control form-control-line">
                                                <option value="">Select Semester</option>
                                                <option <% if(request.semester != null && request.semester == '1st'){ %><%= 'selected' %><% }else if(multimedia.semester == '1st'){ %><%= 'selected' %><% } %> value="1st">1st</option>
                                                <option <% if(request.semester != null && request.semester == '2nd'){ %><%= 'selected' %><% }else if(multimedia.semester == '2nd'){ %><%= 'selected' %><% } %> value="2nd">2nd</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Update Multimedia</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>
